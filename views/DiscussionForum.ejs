<html>
    <head>
        <title>Discuss</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body class="container">
        <div class="page-header">
            <h1>Login System</h1>
        </div>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/">Home</a></li>
                        <li><a href="/signup">Sign Up</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/UpcomingEvents">Upcoming Events</a></li>
                        <li><a href="/profilepage">Profile</a></li>
                        <%if((locals.user) && (user.UserType=="QuestionSetter")){%>
                            <li><a href="/fileupload">Set Questions</a></li>
                            <%}%>
                        <li><a href="/Discuss">Discussion</a></li>
                        <li><a href="/Leaderboards">Leaderboards</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/login">Log In</a></li>
                        <li><a href="/logout">Log Out</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>


        <div id="allposts">

            <ul><% for(post of posts){ %>

                <li>
                    <p style="font-size: x-small;"></p><%=post.createdAt%></p>
                    <p><%=post.userid.name%><p>
                    <h3><%=post.postBody%></h3>

                </li>
                <br>
                <% for(comment of post.comments){ %>

                        <p style="font-size: x-small;"><%=comment.userid.name%></p>
                        <p style="font-size: x-small;"><%=comment.commentBody%></p>

                        <br>

                    <%}%>

                <form action="/commentit" method="POST">
                    <input name="commentBody" placeholder="Comment here">
                    <input name="postid" type="hidden" value="<%=post._id%>"> 
                    <button type="submit" id="send-message">Post</button>
                  </form>

                  <hr style="color: black;">

                <%}%>
            
            </ul>

        </div>

        <div class="container row">
            <p><%=user.name%></p>

            <div id="user-write-box">
                <div >
                <form action="/postit" method="POST" >
                  <input name="postBody" placeholder="Type here" style="width:20%;">
                  <button type="submit" id="send-message">Post</button>
                </form>
                </div>
              
              </div>
        </div>

        
    </body>
</html>