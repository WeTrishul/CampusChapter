<html>
    <head>
        <title><%=title%></title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body class="container">
        <div class="page-header">
            <h1>Login System</h1>
        </div>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/">Home</a></li>
                        <li><a href="/signup">Sign Up</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/UpcomingEvents">Upcoming Events</a></li>
                        <li><a href="/updatepage">Coder Handles</a></li>
                        <%if((locals.user) && (locals.user.UserType=="QuestionSetter")){%>
                            <li><a href="/fileupload">Set Questions</a></li>
                            <%}%>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/login">Log In</a></li>
                        <li><a href="/users/auth/google">G</a></li>
                        <li><a href="/logout">Log Out</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <div class="container row">
            <div class="jumbotron col-sm-4 pull-center">
                <form action="/signup/createuser" method="POST">
                    <div class="form-group">
                        <label>Name:</label>
                        <input class="form-control" required type="text" name="name"/>
                    </div>
                    <div class="form-group">
                        <label>Username:</label>
                        <input class="form-control" required type="text" name="username"/>
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input class="form-control" required type="email" name="email"/>
                    </div>    
                    <div class="form-group">
                        <label>Password:</label>
                        <input class="form-control" required type="password" name="password"/>
                    </div>
                    <div class="form-group">
                        <label>CodeForces:</label>
                        <input class="form-control" required type="text" name="codeforces"/>
                    </div>
                    <div class="form-group">
                        <label>CodeChef:</label>
                        <input class="form-control" required type="text" name="codechef"/>
                    </div>
                    <div class="form-group">
                        <label>Hackerrank:</label>
                        <input class="form-control" required type="text" name="hackerrank"/>
                    </div>
                    <div class="form-group">
                        <label>Spoj:</label>
                        <input class="form-control" required type="text" name="spoj"/>
                    </div>
                    <div class="form-group">
                        <label>UserType:</label>
                        <input class="form-control" required type="text" name="UserType"/>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Sign Up"/>
                    </div>
                </form>                  
            </div>          
        </div>
    </body>
</html>