                        <li><a href="/logout">Log Out</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <div class="container row">
            <div class="jumbotron col-sm-4 pull-center">
                        <%if((locals.user) && (locals.user.UserType=="QuestionSetter")){%>
                    <form action="/fileupload/setquestions/<%=locals.user._id%>" method="post" enctype="multipart/form-data">
                    <input type="file" name="questions" multiple>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Upload"/>
                    </div>
                </form>  
                <%}%>                
            </div>          
        </div>

    </body>
