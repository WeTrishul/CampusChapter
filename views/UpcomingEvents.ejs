<html>
    <head>
        <title>Upcoming Events</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body class="container">
        <div class="page-header">
            <h1>Login System</h1>
        </div>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/home">Home</a></li>
                        <li><a href="/signup">Sign Up</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/UpcomingEvents">Upcoming Events</a></li>
                        <li><a href="/profilepage">Profile</a></li>
                        <%if((locals.user) && (locals.user.UserType=="QuestionSetter")){%>
                        <li><a href="/fileupload">Set Questions</a></li>
                        <%}%>

                        <li><a href="/Discuss">Discussion</a></li>
                        <li><a href="/Leaderboards">Leaderboards</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/login">Log In</a></li>
                        <li><a href="/logout">Log Out</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        
        <div class="container row">
           <h1><%=user.name%>,Your upcoming events are:</h1> 
           <div>
            <%if((locals.user) && (locals.user.UserType=="Admin")||(locals.user.UserType=="MediaLead") || (locals.user.UserType=="EventsLead") ){%>
            <button><a href="/EventForm">Create event</a></button>
            <%}%>
            <br>
        </div>
<br><br>
        <div id="myevents" style="border-style: solid;">
            <%for( i of myevents){%>
                <ul>
                    <img src="<%=i.eventbanner%>" alt="banner" width="100">
                   
                    <l1><%=i.eventname%></l1>
                    <p>Start Time: <small><%=i.eventStartTime%></small></p>
                    <p>End Time: <%=i.eventEndTime%></p>
                    <p>Date:<%=i.eventDate%></p>
                    <p>Total Registrations :<%=i.Registeredusers.length%> </p>

                    <button><a href="/RegisterForEvent/?id=<%= i._id %>">Register</a></button>
                    <%if((locals.user) && (locals.user.UserType=="Admin")||(locals.user.UserType=="MediaLead") || (locals.user.UserType=="EventsLead") ){%>
                    <button><a href="/EditForm/?id=<%= i._id %>">Edit</a></button>
                    <button><a href="/DeleteEvent/?id=<%= i._id %>">Delete</a></button>
                    <%}%>
                    <a href="#">more details</a>
                </ul>
            <%}%>
        </div>
<br><br>
           <%for( i of result){%>
            <ul>
                <l1><%=i.name%></l1>
                <p>Duration: <small><%=i.durationSeconds/3600%>hrs</small></p>
                <p>Starting on: <%=i.startTimeSeconds%></p>
            </ul>
            <%}%>
        </div>
    </body>
</html>
