<html>
    <head>
        <title>Upcoming Events</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body class="container">
        <div class="page-header">
            <h1>Login System</h1>
        </div>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/home">Home</a></li>
                        <li><a href="/signup">Sign Up</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/UpcomingEvents">Upcoming Events</a></li>
                        <li><a href="/profilepage">Profile</a></li>
                        <%if((locals.user) && (locals.user.UserType=="QuestionSetter")){%>
                        <li><a href="/fileupload">Set Questions</a></li>
                        <%}%>

                        <li><a href="/Discuss">Discussion</a></li>
                        <li><a href="/Leaderboards">Leaderboards</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/login">Log In</a></li>
                        <li><a href="/logout">Log Out</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <% if(event) {%>

        <form action="/UpdateEvent" method="POST" enctype="multipart/form-data" >
            <input type="file" name="eventbanner" >
            <input type="text" name="eventname" value="<%=event.eventname%>" > <br><br>
            <input type="text" name="aboutevent" value="<%=event.aboutevent%>" style="height: 100px;width: 500px;"><br><br>
            <input type="text" name="eventStartTime" value="<%=event.eventStartTime%>"><br><br>
            <input type="text" name="eventEndTime" value="<%=event.eventEndTime%>"><br><br>
            <input type="text" name="eventDate" value="<%=event.eventDate%>"><br><br>
            <input name="id" type="hidden" value="<%=event._id%>"> 
            <input type="submit" value="Save">
           

        </form>
        <%}

         else {%>

           

        <form action="/CreateEvent" method="POST" enctype="multipart/form-data">
            <input type="file" name="eventbanner" required="true">
            <input type="text" name="eventname" placeholder="Event Name" > <br><br>
            <input type="text" name="aboutevent" placeholder="About Event" style="height: 100px;width: 500px;"><br><br>
            <input type="text" name="eventStartTime" placeholder="Start Time"><br><br>
            <input type="text" name="eventEndTime" placeholder="End Time"><br><br>
            <input type="text" name="eventDate" placeholder="Event Date"><br><br>
            <input type="submit" value="Create">
           

        </form>
        <%}%>
       
    </body>
</html>